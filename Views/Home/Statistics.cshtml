@model IEnumerable<Avram_Maria_Furniture.Models.FurnitureStoreViewModels.OrderGroup>
@{
    ViewData["Title"] = "Statistics";
}
    <style>
        body {
            background-color:teal;
        }
    </style>

<h2>Ordered Furniture Statistics</h2>
<div class="row">

    <div class="col-md-4">
        <table>
            <tr>
                <th>
                    Order Date
                </th>
                
                <th>
                    Ordered Furniture
                </th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.OrderDate)
                    </td>
                    
                    <td>
                        @item.FuritureCount
                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="col-md-8 col-md-offset-2">
        <section>
            <h4>We love our work.</h4>
            <hr />
            <img src="~/img/mobila11.jpg" alt="Sample Photo" height="500" width="700" />
        </section>
    </div>
</div>
